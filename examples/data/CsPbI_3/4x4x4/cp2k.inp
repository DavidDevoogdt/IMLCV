! ********************************************
! METHOD TO EVALUATE THE ENERGY/FORCES ON THE
! SYSTEM AT EVERY SNAPSHOT
! In this case DFT has been used
! In CP2K the QuickStep module handles this
! ********************************************
&FORCE_EVAL


! ********************************************
! System parameters:
! - cell size, xyz file, ...
! - define how the atoms should be defined
! ********************************************
  &SUBSYS





    &KIND                         Cs
      ELEMENT                     Cs  
      BASIS_SET                   TZVP-MOLOPT-SR-GTH
      POTENTIAL                   GTH-PBE-q9
    &END KIND 
    &KIND                         Pb
      ELEMENT                     Pb 
      BASIS_SET                   TZVP-MOLOPT-SR-GTH
      POTENTIAL                   GTH-PBE-q4
    &END KIND 
    &KIND                         I
      ELEMENT                     I  
      BASIS_SET                   TZVP-MOLOPT-SR-GTH
      POTENTIAL                   GTH-PBE-q7
    &END KIND 

  &END SUBSYS

  
  
! ********************************************
! DFT parameters
! ********************************************
!  METHOD QuickStep
!  STRESS_TENSOR    ANALYTICAL


  &DFT
    CHARGE       0                          
    MULTIPLICITY 1
    BASIS_SET_FILE_NAME {BASIS_SET_FILE_NAME}
    POTENTIAL_FILE_NAME {POTENTIAL_FILE_NAME}

    &QS
      METHOD GPW
    &END QS
    
    &MGRID
      CUTOFF [Ry]  400         
      COMMENSURATE TRUE                     
      NGRIDS 5
    &END MGRID


    
! ********************************************
! Exchange and Correlation functional
! ********************************************
    &XC                                     
      &XC_FUNCTIONAL               PBE                 #Still wrong functional!!!!!!!!!!
      &END XC_FUNCTIONAL 

      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)
          PARAMETER_FILE_NAME  {PATH_DISPERSION}
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF  25
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

! ********************************************
! SCF methods and accuracy
! ********************************************
    &SCF
      EPS_SCF 1.0e-5            ! accuracy
      SCF_GUESS RESTART
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0e-5
      &END OUTER_SCF
    &END SCF

  &END DFT
  
